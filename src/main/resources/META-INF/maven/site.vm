<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>${title}</title>
        <link media="all" rel="stylesheet" type="text/css" href="${relativePath}/css/jcabi.css">
        #foreach ($author in $authors)
            <meta name="author" content="${author}">
        #end
        #if ($decoration.custom && $decoration.custom.getChild("jcabi"))
            #set ($jcabi = $decoration.custom.getChild("jcabi"))
            #if ($jcabi.getChild("favicon"))
                <link rel="icon" href="$jcabi.getChild("favicon").getValue()">
            #end
            #if ($jcabi.getChild("googleAnalyticsId"))
                #set ($gaId = $jcabi.getChild("googleAnalyticsId").getValue())
                <script async src="https://www.googletagmanager.com/gtag/js?id=${gaId}"></script>
                <script>
                    window.dataLayer = window.dataLayer || [];
                    function gtag(){dataLayer.push(arguments);}
                    gtag('js', new Date());
                    gtag('config', '${gaId}');
                </script>
            #end
        #end
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin=anonymous></script>
        <script src="${relativePath}/js/jcabi.js"></script>
    </head>
    <body>
        #macro (link $item)
            #set ($href = $PathTool.calculateLink($item.href, $relativePath))
            #set ($href = $href.replaceAll('\\', '/'))
            #if (($href == ''))
                #set ($href = './')
            #end
            <a href="${href}" title="${item.name}">${item.name}</a>
        #end
        <div class="page" itemscope="" itemtype="http://schema.org/BlogPosting">
            <nav class="menu-section">
                <ul class="menu" id="menu">
                    #macro (isExpanded $display $item)
                        #if ($item && $item.items && $item.items.size() > 0)
                            #foreach ($sub in $item.items)
                                #if ($alignedFileName == $sub.href)
                                    #set ($display = true)
                                #end
                                #isExpanded($display $sub)
                            #end
                        #end
                    #end
                    #macro (menuItem $item)
                        <li #if ($alignedFileName == $item.href) class='active' #end>
                            <span>#link($item)</span>
                            #set ($display = false)
                            #isExpanded($display $item)
                            #if ($item.collapse == false || $display || $alignedFileName == $item.href)
                                <ul>
                                    #foreach ($sub in $item.items)
                                        #menuItem($sub)
                                    #end
                                </ul>
                            #end
                        </li>
                    #end
                    #foreach ($menu in $decoration.body.menus)
                        <li>
                            <span>${menu.name}</span>
                            #if ($menu.items && $menu.items.size() > 0)
                                <ul>
                                    #foreach ($item in $menu.items)
                                        #menuItem($item)
                                    #end
                                </ul>
                            #end
                        </li>
                    #end
                </ul>
            </nav>
            <div class="right-side">
                <main>
                    <div class="content">
                        <header>
                            <div class="logo">
                                <a href="${decoration.bannerLeft.href}"
                                    title="#if ($decoration.bannerLeft.name) ${decoration.bannerLeft.name} #else logo #end">
                                    #if ($decoration.bannerLeft.image)
                                    <img src="${decoration.bannerLeft.image.src}"
                                        alt="$!{decoration.bannerLeft.image.alt}"
                                        #if ($decoration.bannerLeft.image.width)
                                            width="${decoration.bannerLeft.image.width}"
                                        #end
                                        #if ($decoration.bannerLeft.image.height)
                                            height="${decoration.bannerLeft.image.height}"
                                        #end
                                        itemprop="image"
                                    >#end
                                </a>
                            </div>
                            <ul class="badges">
                                <li>
                                    <strong itemprop="version">${project.version}</strong>
                                </li>
                                <li>
                                    <time itemprop="datePublished" datetime="$date.get('yyyy-MM-dd')">
                                        $date.get('d-MMM-yyyy')
                                    </time>
                                </li>
                                <li class="menu-button">menu</li>
                            </ul>
                        </header>
                        <div id="here-goes-menu" class="menu-off"></div>
                        #set ( $url = $project.scm.connection )
                        #if ( $url.matches('.*github.com(?:/|:)([a-zA-Z0-9\-]+)/([a-zA-Z0-9\-]+)\.git') )
                            #set ( $pos1 = $url.lastIndexOf('github.com') + 11 )
                            #set ( $pos2 = $url.lastIndexOf('/') + 1 )
                            #set ( $owner = $url.substring($pos1, $url.lastIndexOf('/')) )
                            #set ( $repo = $url.substring($pos2, $url.lastIndexOf('.git')) )
                            <a href="https://github.com/${owner}/${repo}">
                                <img src="https://www.jcabi.com/fork-me.svg" class="fork-me">
                            </a>
                        #end
                        <article itemprop="articleBody">
                            ${bodyContent}
                        </article>
                    </div>
                </main>
                <footer class="legal-notes">
                    <div>
                        Copyright &#169;
                        #set ($year = $date.year)
                        #if (${project.inceptionYear} && ${project.inceptionYear} != ${year})
                            ${project.inceptionYear}-${year}
                        #else
                            ${year}
                        #end
                    </div>
                    <div>${project.organization.name}, All Rights Reserved.</div>
                    <div><a href="https://maven.apache.org/privacy-policy.html">Privacy Policy</a>.</div>
                </footer>
            </div>
        </div>
    </body>
</html>
